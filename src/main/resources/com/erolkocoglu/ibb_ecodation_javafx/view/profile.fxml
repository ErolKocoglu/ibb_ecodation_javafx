<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.erolkocoglu.ibb_ecodation_javafx.controller.ProfileController"
            prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
    <center>

            <VBox fx:id="profileContainer" style="-fx-padding: 10;" spacing="10">
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;" maxWidth="900">

                    <Button text="🏠Back to Home" styleClass="back-home" onAction="#backToAdmin" fx:id="backButton"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="✏Edit Profile" styleClass="edit-profile" onAction="#editProfile" fx:id="editButton"/>
                    <!--<Pane HBox.hgrow="ALWAYS"/>-->
                    <!--<Button text="🔒Change Password" onAction="#changePassword"/> Gereksiz olduğundan kaldırdım-->

                </HBox>
                <TextField fx:id="id" style="-fx-padding: 10;"/>
                <TextField fx:id="username" style="-fx-padding: 10;"/>
                <TextField fx:id="email" style="-fx-padding: 10;"/>
                <TextField fx:id="role" style="-fx-padding: 10;"/>

            </VBox>

    </center>
</BorderPane>
